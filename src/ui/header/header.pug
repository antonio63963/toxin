include ../buttons/buttons.pug
include ../nav_link/nav_link.pug

mixin appHeader(headerOptions={"userName": null, "logo": "assets/svg/logo.svg", "moreIcon": "assets/svg/expand_more.svg"}) 
  div.header__wrapper
    header.header
      img(class="header__logo", src=require("../../assets/svg/logo.svg"), alt="toxin-logo") 
      nav.header__nav
        ul.nav-list
          +navLink({name: 'О нас', href: '#'})(class="nav-list__link")
          +navLink({name: 'Услуги', href: '#', isMoreIcon: true})(class="nav-list__link")
          +navLink({name: 'Вакансии', href: '#'})(class="nav-list__link")
          +navLink({name: 'Новости', href: '#'})(class="nav-list__link")
          +navLink({name: 'Соглашения', href: '#', isMoreIcon: true})(class="nav-list__link")
        if headerOptions.userName 
          .header__user
            span.header__user-name= headerOptions.userName
        else          
          .header__auth-options
            +outlinedButton('Войти', './login.html')(class="header__login-button")
            +filledButton('Зарегистрироваться')(class="header__signUp-button")
        img(class="nav-list__icon-burger", src=require("../../assets/svg/burger.svg"), alt="menu")
